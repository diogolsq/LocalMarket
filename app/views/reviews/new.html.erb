<div class="fixing-margin">
  <div class="form-centralize">
    <h2>Adding a Review</h2>
    <div class="form-borders">
      <%= simple_form_for [ @product, @review ] do |f| %>
        <%= f.input :description %>
        <%= f.input :rating, collection: (1..5) %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
